{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "main.cpp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "stopAtEntry": false,
            "program": "/opt/homebrew/bin/python3",
            "MIMode": "lldb",
            "processId": ""
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/python",
            "console": "integratedTerminal"
        },
        {
            "name": "SIMON GUI",
            "type": "pythoncpp",
            "request": "launch",
            "pythonLaunchName": "Python: Current File",
            "cppAttachName": "(gdb) Attach",
            "cwd": "${workspaceFolder}/run",
        }
    ]
}